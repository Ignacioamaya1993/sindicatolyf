rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸ“Œ Reglas para la colecciÃ³n "noticias"
    match /noticias/{docId} {
      allow read: if true;  // âœ… Cualquiera puede leer noticias
      allow create, update, delete: if request.auth != null;  // ðŸ”’ Solo usuarios autenticados pueden escribir
    }

    // ðŸ“Œ Reglas para la colecciÃ³n "profesionales"
    match /profesionales/{docId} {
      allow read: if true;  // âœ… Cualquiera puede leer profesionales
      allow write: if request.auth != null;  // ðŸ”’ Solo usuarios autenticados pueden escribir
    }

    // ðŸ“Œ Reglas para la colecciÃ³n "usuarios"
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;  // ðŸ”’ Solo el dueÃ±o de la cuenta puede leer/escribir
    }
  }
}